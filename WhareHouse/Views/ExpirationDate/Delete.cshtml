@model WhareHouse.Models.EXPIRATIONDATE

@{
    ViewBag.Title = "Delete";
}

<div class="breadcrumb topBar">
    <div class="topButtonsContainer">
        @Html.ActionLink("Lista Clientes", "Index", null, null, new { @class = "btn btn-outline-primary topButtons" })
    </div>
    <div class="topButtonsContainer">
        @Html.ActionLink("Agregar Cliente", "Create", null, new { @class = "btn btn-outline-primary topButtons" })
    </div>
</div>


<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-user-plus"></i>
        Detalles Proveedor
    </div>
    <div class="card-body">
        <div class="divdivItems">
            <div class="divItems">

                <div class="form-group Atributes">
                    <h5>N° Lote:</h5>
                    <div class="col-md-10 editTextCenter">
                        @Html.DisplayFor(model => model.LOTNUMBER)
                    </div>
                </div>
                <div class="form-group Atributes">
                    <h5>Proveedor:</h5>
                    <div class="col-md-10 editTextCenter">
                        @Html.DisplayFor(model => model.PRODUCT.PROVIDER.COMPANYNAME)
                    </div>
                </div>

                <div class="form-group Atributes">
                    <h5>Fecha De Vencimiento:</h5>
                    <div class="col-md-10 editTextCenter">
                        @Html.DisplayFor(model => model.EXPIREDATE)
                    </div>
                </div>

            </div>
            <div class="divItems">

                <div class="form-group Atributes">
                    <h5>Cantidad Producto:</h5>
                    <div class="col-md-10 editTextCenter">
                        @Html.DisplayFor(model => model.PRODUCTQUANTITY)
                    </div>
                </div>
                <div class="form-group Atributes">
                    <h5>Nombre Producto:</h5>
                    <div class="col-md-10 editTextCenter">
                        @Html.DisplayFor(model => model.PRODUCT.PRODUCTNAME)
                    </div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="detailsDivButton">
                            <input type="submit" value="Eliminar" class="btn btn-danger detailsButton" />
                        </div>
                    }
                </div>



            </div>



        </div>

    </div>

</div>


