                                </a>
                                <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.IDCLIENT }, new { @class = "tableMenu ColorMenu" })
                                    <div class="dropdown-divider"></div>
                                    @Html.ActionLink("Details", "Details", new { id = item.IDCLIENT }, new { @class = "tableMenu ColorMenu" })
                                    <div class="dropdown-divider"></div>
                                    @Html.ActionLink("Delete", "Delete", new { id = item.IDCLIENT }, new { @class = "tableMenu ColorMenu" })
                                </div>
                            </div>
