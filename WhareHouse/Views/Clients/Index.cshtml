                    <tr>
                        <th>Nombre</th>
                        <th>Rut</th>
                        <th>Telefono</th>
                        <th>¿Fiar?</th>
                        <th>Edad</th>
                        <th>Opciones</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td class="NombreApellido">
                            @Html.DisplayFor(modelItem => item.NAME1)
