@model IEnumerable<WhareHouse.Models.CLIENT>

@{
    ViewBag.Title = "Index";
}

<div class="breadcrumb topBar">
    <div class="topButtonsContainer">
        @Html.ActionLink("Lista Clientes", "Index", null, new { @class = "btn btn-outline-primary topButtons" })
    </div>
    <div class="topButtonsContainer">
        @Html.ActionLink("Agregar Cliente", "Create", null, new { @class = "btn btn-outline-primary topButtons" })
    </div>
</div>

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Lista Clientes
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="theadAling">
                    <tr>
                        <th>Nombre</th>
                        <th>Rut</th>
                        <th>Telefono</th>
                        <th>¿Fiar?</th>
                        <th>Fecha De Nacimiento</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Nombre</th>
                        <th>Rut</th>
                        <th>Telefono</th>
                        <th>¿Fiar?</th>
                        <th>Fecha De Nacimiento</th>
                        <th>Opciones</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td class="NombreApellido">
                            @Html.DisplayFor(modelItem => item.NAME1)
                            @Html.DisplayFor(modelItem => item.LASTNAME1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CLIENTRUT)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.CELLPHONE)
                        </td>
                        <td>
                            @{ if (item.BLACKLIST.Equals("1"))
                                {
                            <p>Si</p>
                                }
                                else
                                {
                            <p>No</p>
                                    };
                                }

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BIRTHDATE)
                        </td>
                        <td>
                            <div class="nav-item dropdown tableMenu">
                                <a class="nav-link btn tablemenuButton" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-chevron-circle-down fa-2x tableMenu"></i>
                                </a>
                                <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                                    @Html.ActionLink("Editar", "Edit", new { id = item.IDCLIENT }, new { @class = "tableMenu ColorMenu" })
                                    <div class="dropdown-divider"></div>
                                    @Html.ActionLink("Detalles", "Details", new { id = item.IDCLIENT }, new { @class = "tableMenu ColorMenu" })
                                    <div class="dropdown-divider"></div>
                                    @Html.ActionLink("Borrar", "Delete", new { id = item.IDCLIENT }, new { @class = "tableMenu ColorMenu" })
                                </div>
                            </div>
                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

