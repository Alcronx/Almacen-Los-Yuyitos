@model WhareHouse.Models.PRODUCT
@{
    ViewBag.Title = "CreateOrder";
    List<WhareHouse.Models.PRODUCT> lista = ViewBag.ListProducts;
}

<div class="breadcrumb topBar">
    <div class="topButtonsContainer">
        @Html.ActionLink("Realizar Venta", "Create", null, new { @class = "btn btn-outline-primary topButtons" })
    </div>
    <div class="topButtonsContainer">
        @Html.ActionLink("Lista Ventas", "Index", null, new { @class = "btn btn-outline-primary topButtons" })
    </div>
</div>
<div>
    <div class="Venta-Create">
        <div class="alingCenter">
            <p>Fecha Registro: @System.DateTime.Now.ToString("dd-MM-yyyy")</p>
        </div>
        <div class="input-group" style="width:245px">
            <div class="Inputstext">
                <p>Fecha Recepcion:</p>
            </div>
            <div class="Inputstext">
                <p id="MyClockDisplay" class="clock" onload="showTime()"></p>
            </div>
        </div>

        <div>
            <p>N° Boleta: Cambiar</p>
        </div>
    </div>
    <div>
        <div class="form-group Atributes">
            <h5>ID Proveedor</h5>
            <div class="col-md-10">
                @using (Html.BeginForm("CreateSearch", "Order"))
                {
                    <div class="SearchButtonExpirationDate">
                        <div class="dropdownCustom">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.AntiForgeryToken()
                            @Html.DropDownList("PROVIDERNAME", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="buttonSearchdiv">
                            <input type="submit" value="Buscar" class="btn btn-primary buttonsearch" />
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="card mb-3">

            <div class="card-header">
                <i class="fas fa-table"></i>
                Data Table Example
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="myTable" width="100%" cellspacing="0">
                        <thead class="theadAling">
                            <tr>
                                <th>Nombre</th>
                                <th>Tipo</th>
                                <th>Stock</th>
                                <th>Opciones</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Nombre</th>
                                <th>Tipo</th>
                                <th>Stock</th>
                                <th>Opciones</th>
                            </tr>
                        </tfoot>


                        <tbody>
                            @for (int i = 0; i < lista.Count(); i++)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(model => lista[i].PRODUCTNAME)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => lista[i].PRODUCTTYPE)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => lista[i].STOCK)
                                    </td>
                                    <td>


                                        <div class="inputGroup">
                                            @Html.RadioButtonFor(model => model.BARCODE, @lista[i].IDBARCODE, new { @id = lista[i].IDBARCODE, @class = "custom-control-input bigRadioButton" })
                                            @Html.ValidationMessageFor(model => model.BARCODE, "", new { @class = "text-danger" })
                                            <label for="@lista[i].IDBARCODE">Seleccionar</label>
                                        </div>


                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>

                </div>
            </div>
            <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>
    </div>
    <div style="padding-bottom:15px;">
        <div class="OrderADDquantity" style="width:310px">
            <div>
                @Html.TextBox("quantity", 1, new { @type = "number", @style = "width: 100px;", @min = 1, @max = 100 })
            </div>
            <div>

                <input type="submit" value="Agregar Cantidad" class="btn btn-primary buttonsearch" style="width:200px;" />
            </div>
        </div>

    </div>
    <div class="card mb-3">

        <div class="card-header">
            <i class="fas fa-table"></i>
            Data Table Example
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="myTable" width="100%" cellspacing="0">
                    <thead class="theadAling">
                        <tr>
                            <th>Nombre</th>
                            <th>Tipo</th>
                            <th>Stock</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Nombre</th>
                            <th>Tipo</th>
                            <th>Stock</th>
                            <th>Opciones</th>
                        </tr>
                    </tfoot>


                    <tbody>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>

                        </tr>
                    </tbody>

                </table>

            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>
    <div>
        <div>
            <input type="submit" value="Agregar Cantidad" class="btn btn-primary buttonsearch" style="width:200px;" />

            <input type="submit" value="Agregar Cantidad" class="btn btn-primary buttonsearch" style="width:200px;" />
        </div>
    </div>
    
</div>

