@model IEnumerable<WhareHouse.Models.PROVIDER>

@{
    ViewBag.Title = "Index";
}


<div class="breadcrumb topBar">
    <div class="topButtonsContainer">
        @Html.ActionLink("Lista Proveedores", "Index", null, new { @class = "btn btn-outline-primary topButtons" })
    </div>
    <div class="topButtonsContainer">
        @Html.ActionLink("Agregar Proveedor", "Create", null, new { @class = "btn btn-outline-primary topButtons" })
    </div>
</div>

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Lista Provedores
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="theadAling">
                    <tr>
                        <th>Id Proveedor</th>
                        <th>Rut</th>
                        <th>Empresa</th>
                        <th>Celular</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Id Proveedor</th>
                        <th>Rut</th>
                        <th>Empresa</th>
                        <th>Celular</th>
                        <th>Opciones</th>
                    </tr>
                </tfoot>
                <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IDPROVIDER)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RUT)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.COMPANYNAME)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CELLPHONE)
                            </td>
                            <td>
                                <div class="nav-item dropdown tableMenu">
                                        <a class="nav-link btn tablemenuButton" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-chevron-circle-down fa-2x tableMenu"></i>
                                        </a>
                                    <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                                        @Html.ActionLink("Editar", "Edit", new { id = item.IDPROVIDER },new { @class = "tableMenu ColorMenu" })
                                        <div class="dropdown-divider"></div>
                                        @Html.ActionLink("Detalles", "Details", new { id = item.IDPROVIDER }, new { @class = "tableMenu ColorMenu" })
                                        <div class="dropdown-divider"></div>
                                        @Html.ActionLink("Borrar", "Delete", new { id = item.IDPROVIDER }, new { @class = "tableMenu ColorMenu" })
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
