@model WhareHouse.Models.PROVIDER

@{
    ViewBag.Title = "Create";
    long idProvider = ViewBag.idProvider;
}
<div class="breadcrumb topBar">
    <div class="topButtonsContainer">
        @Html.ActionLink("Lista", "Index", null, null, new { @class = "btn btn-outline-primary topButtons" })
    </div>
    <div class="topButtonsContainer">
        @Html.ActionLink("Agregar Proveedor", "Create", null, new { @class = "btn btn-outline-primary topButtons" })
    </div>
</div>


<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-user-plus"></i>
        Agregar Proveedor
    </div>
    <div class="card-body">
            @using (Html.BeginForm(null,null,FormMethod.Post, new {@class = "divdivItems" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="divItems">
            <div class="form-group Atributes">
                <h5>ID Proveedor</h5>
                <div class="col-md-10">
                    <p class="form-control">@idProvider</p>
                </div>
            </div>

            <div class="form-group Atributes">
                <h5>Rut</h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RUT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RUT, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group Atributes">
                <h5>Nombre Compañia</h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.COMPANYNAME, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.COMPANYNAME, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group Atributes">
                <h5>Nombres</h5>
                <div class="input-group twoImputs col-md-10">
                    <div class="Inputstext">
                        @Html.EditorFor(model => model.NAME1, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NAME1, "", new { @class = "text-danger" })
                    </div>
                    <div class="Inputstext">
                        @Html.EditorFor(model => model.NAME2, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NAME2, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group Atributes">
                <h5>Apellidos</h5>
                <div class="input-group twoImputs col-md-10">
                    <div class="Inputstext">
                        @Html.EditorFor(model => model.LASTNAME1, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LASTNAME1, "", new { @class = "text-danger" })
                    </div>
                    <div class="Inputstext">
                        @Html.EditorFor(model => model.LASTNAME2, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LASTNAME2, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="divItems">
            <div class="form-group  Atributes">
                <h5>Region</h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.REGION, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.REGION, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group Atributes">
                <h5>Comuna</h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.COMMUNE, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.COMMUNE, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group Atributes">
                <h5>Direccion</h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DIRECTION, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DIRECTION, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group Atributes">
                <h5>Rubro</h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.COMPANYITEM, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.COMPANYITEM, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group Atributes">
                <h5>Celular</h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CELLPHONE, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CELLPHONE, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group Atributes">
                <h5>Correo</h5>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MAIL, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MAIL, "", new { @class = "text-danger" })
                </div>
                <input type="submit" value="Agregar" class="btn btn-success btnCreate" />

            </div>


        </div>



            }
        
    </div>

</div>
       