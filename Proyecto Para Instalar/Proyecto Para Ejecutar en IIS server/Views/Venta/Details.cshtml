@model WhareHouse.Models.TICKET

@{
    ViewBag.Title = "Details";
    List<WhareHouse.Models.TICKETDETAILS> tickets = ViewBag.TicketDetails;
}
<div class="breadcrumb topBar">
    <div class="topButtonsContainer">
        @Html.ActionLink("Realizar Venta", "Create", null, null, new { @class = "btn btn-outline-primary topButtons" })
    </div>
    <div class="topButtonsContainer">
        @Html.ActionLink("Lista Ventas", "Index", null, new { @class = "btn btn-outline-primary topButtons" })
    </div>
</div>


<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-user-plus"></i>
        Boleta
    </div>
    <div class="card-body">
        <div class="VentaDetails">
            <p><strong>Id Ticket: @Model.IDTICKET</strong></p>
            @if (Model.IDCLIENT == null)
            {
                <p><strong>Id Cliente: No Existe Cliente</strong></p>
            }
            else
            {
                <p><strong>Cliente: @Model.CLIENT.NAME1 @Model.CLIENT.LASTNAME1</strong></p>
            }
            @if (Model.IDTRUSTED == null)
            {
                <p><strong>Tipo Pago: Efectivo </strong></p>
            }
            else
            {
                <p><strong>Tipo Pago: Fiado</strong></p>
            }

            <p><strong>Fecha Y Hora Venta: @Model.TICKETDATE</strong></p>
        </div>
        <div>
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead class="theadAling">
                        <tr>
                            <th>Nombre Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Nombre Producto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Total</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in tickets)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PRODUCT.PRODUCTNAME)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PRODUCT.SALEPRICE)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.QUANTITY)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TOTAL)

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <p><strong>Total: $@Model.TOTALTOTAL</strong></p>
            </div>
        </div>
    </div>

</div>